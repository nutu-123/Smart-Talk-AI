MONGODB_URI=mongodb://mongo:27017/smarttalk-ai   # Local docker-compose development
PORT=5000
JWT_SECRET=your_long_secure_random_secret_here  # Use at least 32 characters for production

# AI Provider API Keys (at least one required)
GEMINI_API_KEY=your_gemini_api_key_here         # Primary provider
OPENAI_API_KEY=your_openai_api_key_here         # First fallback
COHERE_API_KEY=your_cohere_api_key_here         # Second fallback

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com                  # Gmail address
EMAIL_PASSWORD=your_app_specific_password        # Gmail App Password (not regular password)
# To generate app password: Gmail Settings -> Security -> 2-Step Verification -> App Passwords

# Optional: Rate Limiting (defaults shown)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# Optional: CORS Origins (defaults shown)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001